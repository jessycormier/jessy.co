{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "jessyco": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "none"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public",
                "ignore": [""]
              },
              {
                "glob": "**/*",
                "input": "node_modules/@tonsky/firacode",
                "output": "fonts/firacode"
              }
            ],
            "styles": ["src/styles/main.css"],
            "scripts": ["node_modules/theme-change/index.js"],
            "allowedCommonJsDependencies": ["fault", "extend"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "extractLicenses": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "jessyco:build:production"
            },
            "development": {
              "buildTarget": "jessyco:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public",
                "ignore": [""]
              },
              {
                "glob": "**/*",
                "input": "node_modules/@tonsky/firacode",
                "output": "fonts/firacode"
              }
            ],
            "styles": ["src/styles/main.css"],
            "scripts": ["node_modules/theme-change/index.js"]
          }
        }
      }
    }
  }
}
